<?xml version="1.0" encoding="UTF-8" ?>
<criteria xmlns="http://drivebuild.com"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://drivebuild.com ../drivebuild.xsd">
    <author>Stefan Huber</author>
    <version>1</version>
    <name>Test A</name>
    <environment>environmentA.dbe.xml</environment>
    <stepsPerSecond>60</stepsPerSecond>
    <aiFrequency>60</aiFrequency>

    <participants>
        <participant id="ego" model="ETK800">
            <initialState x="0" y="0" movementMode="MANUAL" orientation="0"/>
            <ai>
                <position id="position"/>
                <speed id="speed"/>
                <steeringAngle id="steeringAngle"/>
                <camera id="frontCamera" width="800" height="600" fov="60" direction="FRONT"/>
                <lidar id="lidar" radius="200"/>
            </ai>
            <movement>
                <waypoint x="50" y="0" movementMode="MANUAL" tolerance="1"/>
                <waypoint x="80" y="20" movementMode="AUTONOMOUS" tolerance="1"/>
                <waypoint x="100" y="20" movementMode="MANUAL" tolerance="1"/>
            </movement>
        </participant>
    </participants>

    <success>
        <scArea participant="ego" points="(90,10);(110,10);(110,30);(90,30)"/>
    </success>

    <failure>
        <or>
            <scDamage participant="ego"/>
            <scLane participant="ego" onLane="offroad"/>
        </or>
    </failure>
</criteria>